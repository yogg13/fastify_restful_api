{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs"	,
		"types": ["node"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": [
		"src/**/*.ts",
		"*.ts",
		"migrations/**/*.ts",
		"seeds/**/*.ts",
		"knexfile.ts"
	],
	"exclude": ["node_modules"],
	"ts-node": {
		"files": true,
		"esm": true,
		"transpileOnly": true
	}
}
